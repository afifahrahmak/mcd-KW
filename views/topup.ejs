    <title>Top Up</title>
    <style>
        .alert {
            padding: 20px;
            background-color: #f44336;
            color: white;
        }
        
        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }
        
        .closebtn:hover {
            color: black;
        }
        h1,p{
            text-align: center;
        }
        b{
            margin-left: 500px;
        }
        input[type = submit]{
            background-color: skyblue;
            border: 1 px solid black;
            border-radius: 8px;
            text-align: center;
            margin-left: 630px;
        }
    </style>
</head>
<body>
    <%- include partials/header.ejs %>
    <% if(err) { %>
        <div class="alert">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
            <strong>Error! </strong><%= err %>
        </div>
        <div class="container">
            <h1>Hello, <%= user.name %></h1>
            <p>Your Current Balance,</p>
            <b><%= numberFormat(customer.balance) %></b>
            <form action="/topUp/<%= customer.id %>" method="POST">
                <div class="form-group">
                    <label for="exampleInputPassword1">Balance</label>
                    <input type="number" class="form-control" id="exampleInputPassword1" min="100000" step="1" name="balance">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        
    <% }else{ %>
        <h1>Hello, <%= user.name %></h1>
        <p>Your Current Balance,</p>
        <b><%= numberFormat(customer.balance) %></b>
        <form action="/topUp/<%= customer.id %>" method="POST">
            <div class="form-group">
                <label for="exampleInputPassword1">Balance</label>
                <input type="number" class="form-control" id="exampleInputPassword1" min="100000" step="1" name="balance">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        </div>
    <% } %>
